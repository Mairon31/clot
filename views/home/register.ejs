</head>
<style></style>

<body class="bg-gray-900">
    <!-- Navbar -->
   <%- include("../partials/navbar.ejs") %>  
  <br />
  <!-- End navbar -->
    <main class="container mx-auto px-4">
      <h1 class="text-white text-center mt-10 text-3xl font-bold">Register</h1>
        <br />
       <!-- login -->
<div class="bg-gray-800 shadow-md rounded px-8 pt-6 pb-8 mb-4 flex flex-col">
    <div class="mb-4">
      <label class="block text-white text-sm font-bold mb-2" for="username">
        Username
      </label>
      <input class="bg-transparent border-b-2 outline-none w-full py-2 px-3 text-gray-200 focus:outline-none focus:border-blue-500 inset-0" id="username" type="text" placeholder="Username">
    </div>
    <div class="mb-6">
      <label class="block text-white text-sm font-bold mb-2" for="password">
        Password
      </label>
      <input class="bg-transparent border-b-2 outline-none w-full py-2 px-3 text-gray-200 focus:outline-none focus:border-blue-500" id="password" type="password" placeholder="******">
      <p id="login-err-msg" class="hidden text-red-500 text-xs italic">Please choose a password.</p>
    </div>
    <div class="flex items-center justify-center">
      <button class="bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded" id="login" type="button">
        Register
      </button>
      
    </div>
    <br />
    <hr class="opacity-25"/>
		<div class="flex justify-center my-6">
		<a class="inline-block align-baseline font-bold text-sm text-white hover:underline" href="/login">
        Already created an account? <i class="fas fa-chevron-circle-right"></i>
      </a>	
 </div>
  </div>
     </main>
